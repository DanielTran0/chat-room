extends layout 

block content
  h1= title 


    
  form(action="", method="post")
    if messages.error 
      p.error= messages.error 
      
    div.form-field
      label(for='email') Email
      input#email(type="email" name='email' required=true value=(user? user.email : ''))

    div.form-field
      label(for='password') Password
      input#password(type="password" name='password' required=true)
    
    button(type='submit') Login

    a(href='/user/create') Don't have an account? Sign up!
